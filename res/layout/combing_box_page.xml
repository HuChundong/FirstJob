<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#F2F1ED"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#66666666"
        android:layout_above="@+id/bottom_btns">
        
        <RelativeLayout 
	        android:id="@+id/code_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="20dp">
	        
	        <TextView 
	            android:id="@+id/label_bar_code"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/label_bar_code"/>
	        
	        <EditText 
	            android:id="@+id/bar_code_edit"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/label_bar_code"
	            android:layout_width="match_parent"
	            android:layout_centerVertical="true"
	            android:inputType="number"
	            android:layout_height="wrap_content"/>
	        
	    </RelativeLayout>
	    
	    
	    <RelativeLayout 
	        android:id="@+id/address_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/code_layout"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp">
	        
	         <TextView 
	            android:id="@+id/label_address"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/label_address"/>
	        
	        <EditText 
	            android:id="@+id/address_edit"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/label_address"
	            android:layout_width="match_parent"
	            android:layout_centerHorizontal="true"
	            android:inputType="text"
	            android:layout_height="wrap_content"/>
	    </RelativeLayout>
	    
        <RelativeLayout 
	        android:id="@+id/row_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/address_layout"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp">
	        
	         <TextView 
	            android:id="@+id/label_row"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/label_row"/>
	        
	        <EditText 
	            android:id="@+id/row_edit"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/label_row"
	            android:layout_width="match_parent"
	            android:layout_centerVertical="true"
	            android:inputType="number"
	            android:layout_height="wrap_content"/>
	    </RelativeLayout>
		        
	    <RelativeLayout 
	        android:id="@+id/column_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/row_layout"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp">
	        
	         <TextView 
	            android:id="@+id/label_column"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/label_column"/>
	        
	        <EditText 
	            android:id="@+id/column_edit"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/label_column"
	            android:layout_width="match_parent"
	            android:layout_centerHorizontal="true"
	            android:inputType="number"
	            android:layout_height="wrap_content"/>
		</RelativeLayout>
		
	    <RelativeLayout 
	        android:id="@+id/meter_count_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/column_layout"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp">
	        
	         <TextView 
	            android:id="@+id/label_meter_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="@string/meter_count"/>
	        
	        <EditText 
	            android:id="@+id/meter_count_edit"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/label_meter_count"
	            android:layout_width="match_parent"
	            android:layout_centerHorizontal="true"
	            android:inputType="number"
	            android:layout_height="wrap_content"/>
		</RelativeLayout>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@+id/bottom_btns"
        android:layout_marginBottom="-1dp"
        android:background="#66000000"/>
    
	<LinearLayout 
	    android:id="@+id/bottom_btns"
	    android:layout_width="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_height="35dp">
	    
        <TextView 
            android:id="@+id/add_new"
            android:layout_height="30dp"
            android:layout_width="60dp"
    		android:textColor="@drawable/survey_bottom_text_color_selector"
		    android:background="@drawable/survey_bottom_left_btn_selector"
            android:gravity="center"
            android:textSize="11sp"
            android:text="@string/add_new_bar_code"/>
        
        <TextView 
            android:id="@+id/save"
            android:layout_height="30dp"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@drawable/survey_bottom_text_color_selector"
		    android:background="@drawable/survey_bottom_center_btn_selector"
		    android:layout_marginLeft="-1dp"
		    android:layout_marginRight="-1dp"
		    android:textSize="11sp"
            android:text="@string/save"/>
                
        <TextView 
            android:id="@+id/submit"
            android:layout_height="30dp"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@drawable/survey_bottom_text_color_selector"
		    android:background="@drawable/survey_bottom_center_btn_selector"
		    android:layout_marginLeft="-1dp"
		    android:layout_marginRight="-1dp"
		    android:textSize="11sp"
            android:text="@string/submit"/>
        
        <TextView 
            android:id="@+id/exception"
            android:layout_height="30dp"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@drawable/survey_bottom_text_color_selector"
		    android:background="@drawable/survey_bottom_center_btn_selector"
		    android:layout_marginLeft="-1dp"
		    android:layout_marginRight="-1dp"
		    android:textSize="11sp"
            android:text="@string/exception"/>
        
        <TextView 
            android:id="@+id/back_btn"
            android:textColor="@drawable/survey_bottom_text_color_selector"
		    android:background="@drawable/survey_bottom_right_btn_selector"            
            android:layout_height="30dp"
            android:layout_width="60dp"
            android:textSize="11sp"
            android:gravity="center"
            android:text="@string/back"/>
	</LinearLayout>
	
</RelativeLayout>