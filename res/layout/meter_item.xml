<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:background="#666666"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <TextView 
        android:id="@+id/meter_index"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="index"/>
    
    <TextView 
        android:id="@+id/meter_title"
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meter_index"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="@string/table_name"/>
        
    <TextView 
        android:id="@+id/meter_code"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_below="@+id/meter_title"
        android:gravity="center"/>
    
   <View 
        android:id="@+id/fg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meter_code"
        android:clickable="true"
        android:background="#00000000"/>
    
</RelativeLayout>